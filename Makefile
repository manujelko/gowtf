# ==================================================================================== #
# SETTINGS
# ==================================================================================== #

main = ./cmd/gowtf
bin  = gowtf

# ==================================================================================== #
# HELPERS
# ==================================================================================== #

.PHONY: help
help:
	@echo 'Usage:'
	@sed -n 's/^##//p' ${MAKEFILE_LIST} | column -t -s ':' |  sed -e 's/^/ /'

# ==================================================================================== #
# QUALITY CONTROL
# ==================================================================================== #

## fmt: format code using go fmt
.PHONY: fmt
fmt:
	@go fmt ./...

## vet: run vet
.PHONY: vet
vet:
	@go vet ./...

## test: run all tests
.PHONY: test
test:
	@go test -v -race ./...

